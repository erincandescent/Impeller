<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="im_primary">#9933CC</color>
    <color name="im_secondary">#AA66CC</color>
    <color name="im_accent">#BA75DC</color>    <!--  30% saturation (light) -->

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/im_primary</item>
        <item name="colorPrimaryDark">@color/im_secondary</item>
        <item name="colorAccent">@color/im_accent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/im_primary</item>
        <item name="colorPrimaryDark">@color/im_secondary</item>
        <item name="colorAccent">@color/im_accent</item>
    </style>
</resources>